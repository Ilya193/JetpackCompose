import kotlin.Boolean;

CREATE TABLE Note (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    isCompleted INTEGER AS Boolean NOT NULL DEFAULT 0,
    counter INTEGER,
    body TEXT
);

insert:
INSERT INTO Note(title) VALUES(?);

selectAll:
SELECT * FROM Note;

deleteById:
DELETE FROM Note WHERE id = ?;

competed:
UPDATE Note SET isCompleted = CASE WHEN isCompleted = 0 THEN 1 ELSE 0 END WHERE id = ?;

statistic:
UPDATE Note SET counter = ? WHERE id = ?;